{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "segments": [
          {
            "foreground": "#1b6cd6",
            "properties": {
              "time_format": "15:04:05"
            },
            "style": "plain",
            "template": " {{ .CurrentDate | date .Format }} ",
            "type": "time"
          }
        ],
        "type": "rprompt"
      },
      {
        "alignment": "left",
        "segments": [
          {
            "foreground": "#1b6cd6",
            "properties": {
              "style": "full"
            },
            "style": "plain",
            "template": "{{ .Path }} ",
            "type": "path"
          },
          {
            "foreground": "#00ff55",
            "style": "plain",
            "template": "{{ .HEAD }} ",
            "type": "git"
          },
          {
            "foreground": "#e0281a",
            "style": "plain",
            "template": "\u276f ",
            "type": "text"
          }
        ],
        "type": "prompt"
      }
    ],
    "version": 2
  }